<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
		"-//Hibernate/Hibernate Mapping DTD//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="es.manuelvv.figuras.persona.model.Persona" table="tr_personas">
		<id name="id" column="ID_PERSONA">
			<generator class="native"></generator>
		</id>
		<property name="nombre" type="string" column="NOMBRE" not-null="true"/>
		<property name="apellidos" type="string" column="APELLIDOS" not-null="true"/>
		<property name="id_tipo_documento" type="int" column="ID_TIPO_DOCUMENTO" not-null="true"/>
		<property name="num_documento" type="string" column="NUM_DOCUMENTO" not-null="true"/>
		<property name="fec_alta" type="date" column="FEC_ALTA"/>
		<property name="fec_modif" type="date" column="FEC_MODIF"/>
		<property name="ctl_usuario" type="int" column="CTL_USUARIO"  not-null="true"/>
		<property name="fec_baja" type="date" column="FEC_BAJA"/>
		<property name="ctl_estado" type="int" column="CTL_ESTADO"  not-null="true"/>
	</class>
</hibernate-mapping>